{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block description %}Inscrivez-vous{% endblock %}

{% block keywords %}Padel, Tennis, Club, Time, Inscription{% endblock %}

{% block main %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class="grey2 text-white">
        <h1 class="text_size_xl pt-5 text-center">Créer un compte</h1>
        
        <div class="container">
            <div class="row justify-content-center py-5">
                <div class="col-lg-5">
                    {{form_start(registrationForm)}}
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="registration_form_firstName">Prénom</label>
                                {{form_widget(registrationForm.firstName, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                                <div class="text-danger">{{form_errors(registrationForm.firstName)}}</div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="registration_form_lastName">Nom</label>
                                {{form_widget(registrationForm.lastName, {'attr': {'class':'form-control'}})}}
                                <div class="text-danger">{{form_errors(registrationForm.lastName)}}</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_email">Email</label>
                            {{form_widget(registrationForm.email, {'attr': {'class':'form-control'}})}}
                            <div class="text-danger">{{form_errors(registrationForm.email)}}</div>
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_phone">Téléphone</label>
                            {{form_widget(registrationForm.phone, {'attr': {'class':'form-control'}})}}
                            <div class="text-danger">{{form_errors(registrationForm.phone)}}</div>
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_password_first">Mot de passe</label>
                            {{form_widget(registrationForm.password.first, {'attr': {'class':'form-control', 'placeholder':'Au moins 12 caractères'}})}}
                            <div class="text-danger">{{form_errors(registrationForm.password.first)}}</div>
                            <small class="fst-italic">Le mot de passe doit contenir au moins une lettre majuscule, une lettre minuscule, un chiffre et un caractère spécial.</small>
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_password_second">Confirmation du mot de passe</label>
                            {{form_widget(registrationForm.password.second, {'attr': {'class':'form-control'}})}}
                            <div class="text-danger">{{form_errors(registrationForm.password.second)}}</div>
                        </div>
                        <div class="mb-3">
                            {{form_widget(registrationForm.agreeTerms)}}
                            <label for="registration_form_agreeTerms">
                                Lire et accepter
                                <a href="#" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="text-info">les conditions générales d'utilisation</a> 
                               
                            </label>
                            <div class="text-danger">{{form_errors(registrationForm.agreeTerms)}}</div>
                            <!-- Modal -->
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="modal-title fs-5" id="exampleModalLabel">Les conditions générales d'utilisation</h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Reiciendis consectetur deserunt necessitatibus expedita dignissimos esse corrupti facilis qui porro hic?</p>
                                            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Reiciendis consectetur deserunt necessitatibus expedita dignissimos esse corrupti facilis qui porro hic?</p>
                                            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Reiciendis consectetur deserunt necessitatibus expedita dignissimos esse corrupti facilis qui porro hic?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input formnovalidate type="submit" class="btn btn-primary shadow w-100" value="S'inscrire">
                        </div>
                    {{form_end(registrationForm)}}

                    <div class="my-3 text-center">
                        <p>
                            Vous avez déjà un compte ?
                            <a href="{{path('visitor_authentication_login')}}" class="text_yellow">Connectez-vous</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

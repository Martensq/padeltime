{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block description %}Contactez-nous{% endblock %}

{% block keywords %}Padel, Tennis, Club, Time, Contact{% endblock %}

{% block main %}

    <div class="grey2 text-white text-center py-5">
        <div class="container">
            <!-- Contact et coordonnées -->
            <section>
                <!-- Titre -->
                <h1 class="text_size_xl pb-5">NOUS CONTACTER</h1>

                <!-- Form -->
                
                {% include 'components/_alert.html.twig' %}

                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-lg-4 mx-auto mb-5">
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    <label for="contact_form_firstName">Prénom</label>
                                    {{ form_widget(form.firstName, {'attr': {'class':'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                                </div>
                                <div class="mb-3">
                                    <label for="contact_form_lastName">Nom</label>
                                    {{ form_widget(form.lastName, {'attr': {'class':'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                                </div>
                                <div class="mb-3">
                                    <label for="contact_form_email">Email</label>
                                    {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                                </div>
                                <div class="mb-3">
                                    <label for="contact_form_phone">Phone</label>
                                    {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.phone) }}</div>
                                </div>
                                <div class="mb-3">
                                    <label for="contact_form_message">Commentaire</label>
                                    {{ form_widget(form.message, {'attr': {'class':'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.message) }}</div>
                                </div>
                                <div>
                                    <input formnovalidate type="submit" class="btn btn-primary shadow">
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <!-- Coordonnées -->
                <div class="d-flex flex-column align-items-center flex-md-row justify-content-md-evenly pb-5">
                    <div class="ms-md-5">
                        <img src="/logos/tel.png" class="mb-2" width="50" alt="Téléphone">
                        <p class="text_size_s">{{setting.phone}}</p>
                    </div>
                    <div>
                        <img src="/logos/mail.png" class="mb-2" width="50" alt="Courrier">
                        <p class="text_size_s">{{setting.email}}</p>
                    </div>
                </div>
            </section>

            <section class="d-flex flex-column align-items-center">
                <h2 class="text_size_l">Nous trouver</h1>
                <iframe class="my-5 d-md-none d-lg-none" src="{{setting.mapLink}}" width="350" height="200" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <iframe class="my-5 d-none d-md-block d-lg-none" src="{{setting.mapLink}}" width="650" height="400" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <iframe class="my-5 d-none d-md-none d-lg-block" src="{{setting.mapLink}}" width="900" height="525" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </section>
        </div>
    </div>

{% endblock %}
{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Notre Club{% endblock %}

{% block description %}Tarifs et horaires{% endblock %}

{% block keywords %}Padel, Tennis, Club, Time, Tarifs, Horaires, Lieux, Trouver{% endblock %}

{% block main %}

    <div class="grey2 text-center ">
        <!-- Titre -->
        <h1 class="py-5 text_size_xl text-white">TARIFS ET HORAIRES</h1>

        <!-- Horaires -->
        <section class="container">
            <div>
                <h2 class="text_size_l pb-4 text-white">Ouvert tous les jours</h2>
                <p class="text-white">Lundi au vendredi + jours fériés : {{setting.weekOpeningHours}}</p>
                <p class="text-white">Week-end : {{setting.weekEndOpeningHours}}</p>
            </div>

            <!-- Cartes tarifs -->
            <div class="d-flex flex-column align-items-center mt-5 flex-md-row justify-content-md-evenly">
                <article class="card card_size border-dark mb-3">
                    <div class="card-header">
                        <h4 class="mt-2">Heures creuses</h4>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-evenly">
                        <h5 class="card-title">{{setting.offPeakHoursPrice}}€ / heure / personne</h5>
                        <div>
                            <p class="card-text">du lundi au vendredi</p>
                            <p class="card-text">de 10h à 17h</p>
                        </div>
                    </div>
                </article>
                <article class="card card_size border-dark mb-3">
                    <div class="card-header">
                        <h4 class="mt-2">Heures pleines</h4>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-evenly">
                        <h5 class="card-title">{{setting.peakHoursPrice}}€ / heure / personne</h5>
                        <div>
                            <p class="card-text">du lundi au vendredi</p>
                            <p class="card-text">de 17h à 22h</p>
                            <p class="card-text">+ week-end</p>
                        </div>
                    </div>
                </article>
            </div>

            <!-- Loc/achat matériels -->
            <div class="mt-5 mb-4" >
                <img src="/logos/raquette.png" class="mb-2" width="60px" alt="">
                <p class="text-white">Location raquette : {{setting.racketRentalPrice}}€</p>
            </div>
            <div class="mb-5">
                <img src="/logos/balle.png" class="mb-2" width="40px" alt="">
                <p class="text-white">Achat balles : {{setting.ballPrice}}€</p>
            </div>
            <a class="mb-5 btn btn-primary btn-lg blue_color btn_resa" href="{{path('user_booking_index')}}">Réservez un terrain</a>
        </section>

        <!-- Nous trouver -->
        <section class="text-center grey1" id="nous_trouver">
            <div class="py-5 container d-flex">
                <!-- MAP -->
                <iframe class="d-none d-md-block d-lg-block me-2" src="{{setting.mapLink}}" width="550" height="525" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                <!-- INFOS -->
                <article class="d-flex mx-auto flex-column text-white">
                    <h3 class="text_size_l">Padel Time</h3>
                    <div>
                        <div class="my-5">
                            <img src="/logos/localisation.png" class="mb-2" width="60" alt="">
                            <p class="text_size_m">{{setting.address}}</p>
                        </div>
                        <div class="mb-5">
                            <img src="/logos/tel.png" class="mb-2" width="50" alt="">
                            <p class="text_size_m">{{setting.phone}}</p>
                        </div>
                        <div>
                            <img src="/logos/mail.png" class="mb-2" width="50" alt="">
                            <p class="text_size_m">{{setting.email}}</p>
                        </div>
                    </div>
                </article>
            </div>
        </section>

        <!-- Logo FFT -->
        <section class="grey2">
            <div class="container text-center py-5">
                <a href="https://www.fft.fr/jouer/le-padel" target="_blank"><img class="w-25" src="/logos/logo_padel_fft.png" alt="FFT"></a>
            </div>
        </section>
    </div>

{% endblock %}
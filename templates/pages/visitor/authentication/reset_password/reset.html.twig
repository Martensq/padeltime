{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block description %}Nouveau mot de passe{% endblock %}

{% block keywords %}Nouveau, mot-de-passe{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Réinitialisation du mot de passe</h1>

    {{ form_start(resetForm) }}
        <div class="mb-3">
            <label for="">Mot de passe</label>
            {{ form_widget(resetForm.plainPassword.first, {'attr':{'class':'form-control'}}) }}
            <div class="text-danger">{{form_errors(resetForm.plainPassword.first)}}</div>
        </div>
        <div class="mb-3">
            <label for="">Confirmation du mot de passe</label>
            {{ form_widget(resetForm.plainPassword.second, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="mb-3">
            <button formnovalidate class="btn btn-primary">Réinitialiser le mot de passe</button>
        </div>
    {{ form_end(resetForm) }}
{% endblock %}

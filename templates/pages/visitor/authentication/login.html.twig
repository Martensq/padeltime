{% extends '/themes/base_visitor.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}

    <div class="grey2 text-white py-5">
        <h1 class="text_size_xl pt-5 text-center">Se connecter</h1>

        <div class="container">
            <div class="row justify-content-center py-5">
                <div class="col-lg-5">
                    <form method="post" class="w-100">
                        {% if error %}
                            <div class="text-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% include 'components/_alert.html.twig' %}


                        <div class="mb-3">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        {# Jeton de sécurité #}
                        <input type="hidden" name="_csrf_token"
                            value="{{csrf_token('authenticate')}}"
                        >

                        <div class="row mb-3">
                            <div class="col-md-6 my-3">
                                <label>
                                    <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
                                </label>
                            </div>

                            <div class="col-md-6 my-3 text-md-end">
                                <a href="{{path('visitor_authentication_forgot_password_request')}}" class="text-info">Mot de passe oublié ?</a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button formnovalidate class="btn btn-primary" type="submit">Connexion</button>
                        </div>
                    </form>
                    <div class="text-center py-4">
                        <p class="my-1">
                            Vous n'avez pas encore de compte ?
                            <a href="{{path('visitor_registration_register')}}" class="text_yellow">Inscrivez-vous</a>
                        </p>
                        <p class="my-1">
                            <a href="{{path('visitor_home_index')}}" class="text-info">Retourner sur la page d'accueil</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

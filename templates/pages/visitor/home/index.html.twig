{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block description %}Bienvenue sur le site du club de Padel Time{% endblock %}

{% block keywords %}Padel, Tennis, Club, Time{% endblock %}

{% block main %}

    <!-- PADEL TIME - IMG et BTN -->

    <section class="container-fluid img_accueil d-flex justify-content-center align-items-center">
        <div class="d-flex h-75 flex-column align-items-center justify-content-between">
            <h1 class="text-white text_size_xl">PADEL TIME</h1>
            <a class="btn btn-primary btn-lg btn_resa text-white" href="{{path('user_booking_index')}}">Réservez un terrain</a>
        </div>
    </section>


    <!-- Caractéristiques -->

    <section class="grey2 py-5 text_size_m shadow">   
        <div class="container">
            <div class="d-flex flex-column align-items-center flex-md-row justify-content-md-around">
                <div class="d-flex flex-column align-items-center mb-5 flex-lg-row">
                    <img width="100" src="/logos/stars.png" alt="">
                    <p class="text_yellow">Terrains dernière génération</p>
                </div>
                <div class="d-flex flex-column-reverse align-items-center mb-5 flex-lg-row">
                    <p class="text_yellow">8M hauteur sous plafond</p>
                    <img width="100" src="/logos/arrow.png" alt="">
                </div>
            </div>
            <div class="d-flex flex-column align-items-center flex-md-row justify-content-md-around align-items-md-start">
                <div class="d-flex flex-column align-items-center mb-5 me-md-4 flex-lg-row mb-lg-0">
                    <img width="100" src="/logos/temperature.png" alt="">
                    <p class="text_yellow ms-md-2">Isolation normes RT 2012</p>
                </div>
                <div class="d-flex flex-column-reverse align-items-center me-md-4 flex-lg-row">
                    <p class="text_yellow">Espace bar</p>
                    <img width="100" src="/logos/beer.png" alt="">
                </div>
            </div>
        </div>   
    </section>


    <!-- L'équipe -->

    <section class="text-center pb-5">
        <h2 class="pt-4 pb-5 text_size_l">L'équipe</h2>
        <div class="container d-flex flex-column align-items-center flex-md-row justify-content-md-around">
            <article class="d-flex flex-column align-items-center">
                <img class="pb-3 w-75" src="/images/membre_femme2.jpg" alt="Isabelle, membre du club">
                <h3 class="pb-3 text_size_m">Isabelle</h3>
                <p class="w-75 text_size_s">Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio quos laboriosam distinctio ullam
                    beatae, fugit velit, error maxime cupiditate earum debitis provident voluptate nam quia magnam. Odio
                    corporis quidem officiis.</p>
            </article>
            <article class="d-flex flex-column align-items-center">
                <img class="pb-3 w-75" src="/images/membres_hommes.jpeg" alt="Christian et José, membres du club">
                <h3 class="pb-3 text_size_m">Christian et José</h3>
                <p class="w-75 text_size_s">Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestias laborum magnam itaque quas
                    perferendis animi, deleniti nesciunt necessitatibus asperiores hic recusandae atque quos praesentium
                    accusamus aspernatur quam? Cumque, non hic!</p>
            </article>
        </div>
    </section>


    <!-- Icones/liens -->

    <section class="grey2">
        <div class="text_size_m py-5 container d-flex flex-column flex-md-row justify-content-md-around">
            <div class="text-center mb-5 mb-md-0">
                <a class="text-decoration-none text_yellow" href="{{path('visitor_lePadel_index')}}#regles">
                    <img width="100" class="mb-1" src="/logos/book.png" alt="">
                    <p>Règles et niveaux</p>
                </a>
            </div>
            <div class="text-center mb-5 mb-md-0">
                <a class="text-decoration-none text_yellow" href="{{path('visitor_notreClub_index')}}">
                    <img width="100" class="mb-1" src="/logos/euro.png" alt="">
                    <p>Tarifs et horaires</p>
                </a>
            </div>
            <div class="text-center">
                <a class="text-decoration-none text_yellow" href="{{path('user_booking_index')}}">
                    <img width="100" class="mb-1" src="/logos/reservation_jaune.png" alt="">
                    <p>Réservation
                </a>
            </div>
        </div>
    </section>


    <!-- Map et Form -->

    <section id="contact" class="text-center grey1">
        <div class="py-4 container">
            {% include 'components/_alert.html.twig' %}
            <div class="row">

                <!-- Map -->
                <div class="col-lg-6">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4422.119655573427!2d2.50093447991292!3d48.774099089329695!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e60d632186a0c1%3A0x20594726f144f0e4!2sPadel-Horizon!5e0!3m2!1sfr!2sfr!4v1712687305491!5m2!1sfr!2sfr" class="d-none d-md-block me-2" width="550" height="550" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>


                <!-- Form -->

                <div class="col-lg-4 mx-auto text-white">
                    <h3 class="text_size_l pb-4">Nous contacter</h3>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label for="contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                            {{ form_widget(form.firstName, {'attr': {'class':'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                        </div>
                        <div class="mb-3">
                            <label for="contact_form_lastName">Nom <span class="text-danger">*</span></label>
                            {{ form_widget(form.lastName, {'attr': {'class':'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                        </div>
                        <div class="mb-3">
                            <label for="contact_form_email">Email <span class="text-danger">*</span></label>
                            {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.email) }}</div>
                        </div>
                        <div class="mb-3">
                            <label for="contact_form_phone">Phone <span class="text-danger">*</span></label>
                            {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.phone) }}</div>
                        </div>
                        <div class="mb-3">
                            <label for="contact_form_message">Commentaire <span class="text-danger">*</span></label>
                            {{ form_widget(form.message, {'attr': {'class':'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.message) }}</div>
                        </div>
                        <div>
                            <input formnovalidate type="submit" class="btn btn-primary shadow">
                        </div>
                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </section>


    <!-- Logo FFT -->
    
    <section class="grey2">
        <div class="container text-center py-5">
            <a href="https://www.fft.fr/jouer/le-padel" target="_blank"><img class="w-25" src="/logos/logo_padel_fft.png" alt="Logo FFT"></a>
        </div>
    </section>

{% endblock %}
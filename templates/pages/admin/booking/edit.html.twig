{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modification de la réservation{% endblock %}

{% block description %}Modification de la réservation{% endblock %}

{% block keywords %}Modifications, Réservation, admin{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification de la réservation</h1>
    
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="">Heure de début</label>
                        {{form_widget(form.startDate, {'attr': {'class': 'form-control'}})}}
                        <div class="text-danger">{{ form_errors(form.startDate) }}</div>
                    </div>
                    <div class="mb-3">
                        <label for="">Durée</label>
                        {{form_widget(form.duration, {'attr': {'class': 'form-control'}})}}
                        <div class="text-danger">{{ form_errors(form.duration) }}</div>
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary" value="Modifier">
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{# BOOKING SLOT #}

<div class="col-8 col-md-5 col-lg-4 col-xl-3 card mb-4 mx-2 shadow-lg text-center p-0">
    <div class="card-header pb-0">
        <p class="mt-2 text_size_m fw-medium">{{slot.startTime|date('H')}}h{{slot.startTime|date('i')}}</p>
    </div>
    <div class="card-body d-flex justify-content-between align-items-center py-0 px-0">
        {% if 1 in slot.durations %}
            <a href="{{path('user_booking_confirm', {'annee': slot.startTime|date('Y'), 'mois': slot.startTime|date('m'), 'jour': slot.startTime|date('d'), 'heure' : slot.startTime|date('H'), 'duree' : slot.durations[0], 'price' : slot.price[0]})}}" class="card-body fw-medium text-decoration-none btn btn-light">
                <p class="text_size_s fw-normal">{{slot.durations[0]}}h</p>
                <p class="text_size_s fw-semibold">{{slot.price[0]}}€</p>
                <small class="fst-italic">{{slot.price[0] / 4}}€ / joueur</small>
            </a>
        {% endif %}
        {% if 2 in slot.durations %}
            <div class="vr"></div>
            <a href="{{path('user_booking_confirm', {'annee': slot.startTime|date('Y'), 'mois': slot.startTime|date('m'), 'jour': slot.startTime|date('d'), 'heure' : slot.startTime|date('H'), 'duree' : slot.durations[1], 'price' : slot.price[1]})}}" class="card-body fw-medium text-decoration-none btn btn-light">
                <p class="text_size_s fw-normal">{{slot.durations[1]}}h</p>
                <p class="text_size_s fw-semibold">{{slot.price[1]}}€</p>
                <small class="fst-italic">{{slot.price[1] / 4}}€ / joueur</small>
            </a>
        {% endif %}
    </div>
    <div class="card-footer">
        <small class="fst-italic ">Il reste {{slot.availableCourts}} terrain(s)</small>
    </div>
</div>
<div class="row d-flex justify-content-center mt-5">
    <div class="col-8 col-md-5 col-lg-4 col-xl-3 card mb-4 mx-2 shadow-lg text-center p-0">
        <div class="card-header pb-0">
            <p class="mt-2 text_size_m fw-medium">10h00</p>
        </div>
        <div class="card-body d-flex justify-content-between align-items-center py-0 px-0">
            {% if 1 in availableSlots %}
                <a href="#" class="card-body fw-medium text-decoration-none btn btn-light">
                    <p class="text_size_s fw-normal">1h</p>
                    <p class="text_size_s fw-semibold">36€</p>
                    <small class="fst-italic">9€ / joueur</small>
                </a>
            {% endif %}
            <div class="vr"></div>
            {% if 1.5 in availableSlots %}
                <a href="#" class="card-body fw-medium text-decoration-none btn btn-light">
                    <p class="text_size_s fw-normal">1h30</p>
                    <p class="text_size_s fw-semibold">54€</p>
                    <small class="fst-italic">13.50€ / joueur</small>
                </a>
            {% endif %}
            <div class="vr"></div>
            {% if 2 in availableSlots %}
                <a href="#" class="card-body fw-medium text-decoration-none btn btn-light">
                    <p class="text_size_s fw-normal">2h</p>
                    <p class="text_size_s fw-semibold">72€</p>
                    <small class="fst-italic">18€ / joueur</small>
                </a>
            {% endif %}
        </div>
        <div class="card-footer">
            <small class="fst-italic ">Il reste 1 terrain(s)</small>
        </div>
    </div>
</div>